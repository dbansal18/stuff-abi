<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style type="text/css">

.footer {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 1rem;
  background-color: #efefef;
  text-align: center;
  width: 100%;
  height: 80px;
}

.background  {
    background-image: url('../images/header.jpg');
    -webkit-filter: blur(8px);
    -moz-filter: blur(8px);
    -o-filter: blur(8px);
    -ms-filter: blur(8px);
    filter: blur(8px);
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
}
header{
  z-index: 1;
  background-color: white;
}

  .allSides
  {
  box-shadow: 0 0 10px rgba(0,0,0,0.6);
  -moz-box-shadow: 0 0 10px rgba(0,0,0,0.6);
  -webkit-box-shadow: 0 0 10px rgba(0,0,0,0.6);
  -o-box-shadow: 0 0 10px rgba(0,0,0,0.6);
  }

.formdiv
{
  margin-top: 150px;
  width: 40%;
}
@media(max-width: 768px)
{
  .formdiv
  {
    width: 100%
  }
}
  </style>
  </head>
 <body onload="initPage()">
<header style="width: 100%;height:60px;" class="allSides">
<p style="font-size: 30px;padding: 10px;font-weight: bold;">Welcome Admin</p>
</header>
  <div class="container">
        <form action="/adminLogin/login" method="post" class="form-horizontal" style="margin-top:6%;">
          <center>
          <div class="formdiv allSides" style="background-color: rgba(0,0,0,0.5);;color: white;">
                <center><h1 style="color: white">Admin Login</h1></center>
                
                <div class="form-group" style="margin: 10px">
                    <input type="text" required="" name="username" class="form-control" placeholder="Username"><br/>
                </div>

                <div class="form-group" style="margin: 10px">
                    <input type="password" required="" name="password" class="form-control" placeholder="password"><br/>
                </div>

                <div class="form-group" style="margin: 10px">
                    <input type="submit" value="Login" class="btn btn-success">
                </div>
                <br>
            </div>
          </center>
        </form>
  </div>

<div class="background"></div>

<footer class="footer allSides" style="position:fixed">
<center><p id="copyright" style="font-size:20px;font-weight:bold;color:#7f7f84"></p>
</p></center>
</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>

function initPage() {
    var date = new Date();
    var currentdate = date.getFullYear();
    document.getElementById("copyright").innerHTML = "dbansal &copy; "+currentdate;
}

</script>
  </body>
</html>
